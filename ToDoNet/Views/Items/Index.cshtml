@model IEnumerable<ToDoNet.Models.Item>

@{
    ViewData["Title"] = "Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>To Do List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th></th>
    </tr>

    @foreach (var listItem in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => listItem.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => listItem.Category.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listItem.ItemId }) |
                @Html.ActionLink("Details", "Details", new { id = listItem.ItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listItem.ItemId })
            </td>
        </tr>
    }
</table>

<p class="btn btn-success btn-lg">
    @Html.ActionLink("View Categories", "Index", "Categories")
</p>

<p class="btn btn-warning btn-lg">
    @Html.ActionLink("Create New Item", "Create")
</p>
<p class="btn btn-info btn-lg">
    @Html.ActionLink("Create New Category", "Create", "Categories")
</p>


